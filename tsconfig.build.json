{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES6", "DOM"],
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "declarationDir": "./dist/types"
  },
  "files": ["./src/index.ts"],
  "exclude": ["./node_modules", "./src/tests"]
}
